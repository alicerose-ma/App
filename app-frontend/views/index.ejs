<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <%- include('./components/bootstrap.ejs'); -%>
</head>

<body>
  <h1>Sign Up</h1>
  <div id="infoWarning"></div>
  <form>
    <div class="form-group">
      <label>Email address</label>
      <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" id="InputPassword1" placeholder="Password">
    </div>
    <div class="form-group">
      <label>Confirm Password</label>
      <input type="password" class="form-control" id="ConfirmPassword1" placeholder="Confirm Password">
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button id="btn" type="submit" class="btn btn-primary">Submit</button>
  </form>
</body>

<script>
  $(document).ready(function () {
    $("#btn").click(function () {
      const email = $('#InputEmail1').val();
      const password = $('#InputPassword1').val();
      const confirm = $('#ConfirmPassword1').val()

      var isValid = false;
      var msg = " "
      
      if (email == '' || password == '' || confirm == '') {
        isValid = false
        msg = "Missing field(s) <br>"
      }

      if (password != confirm) {
        isValid = false
        msg = msg + "Password and Confirm Password do not match <br>";
      }
      
      if (password.length < 3) {
        isValid = false
        msg = msg + 'Password needs at least 3 character <br>';
      }

      console.log(msg)
      if (isValid) {
        console.log("ADD to Table")
      } else {
        const html = `<div class="alert alert-warning"> ${msg}</div>`;
        $('#infoWarning').html(html)
      }
      return false
    });
  });
</script>

</html>